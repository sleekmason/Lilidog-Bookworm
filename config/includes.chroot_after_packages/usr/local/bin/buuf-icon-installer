#!/bin/bash
echo ""
read -p "   Buuf Icon Set Installer 54MB

   This script will download and install the Buuf icon set to 
   /usr/share/icons for systemwide use. These icons are 
   originally copied from: [0;36mhttps://store.kde.org/p/1012233/[0m
    
   To uninstall, delete the folder in /usr/share/icons.
   
   ---------------------------------------------------
   
   Please press enter to install the buuf icon set.
   
   ---------------------------------------------------
      
   Or close this terminal window to quit the install." ;
   if : >/dev/tcp/8.8.8.8/53; then
echo ""
cd /tmp || exit
if [ ! -f "buuf-icons_12.0-1_all.deb" ]; then
wget https://raw.githubusercontent.com/sleekmason/packages/master/buuf-icons_12.0-1_all.deb --show-progress -q
fi 
sudo apt install ./buuf-icons_12.0-1_all.deb
echo ""
echo "----------------------------------------------------------------------"
echo ""
echo "[0;36mAll Finished! You should now be able to select the Buuf icon set.[0m"
echo "" 
echo "----------------------------------------------------------------------"
else
echo ""
 echo "   -------------------------------------------------------"
 echo ""
 echo "   No Internet connection. Please connect and try again."
 echo ""
 echo "   -------------------------------------------------------"
echo ""
fi

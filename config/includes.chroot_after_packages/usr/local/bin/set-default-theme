#!/bin/bash
echo ""
read -p "   Full Theme Reset

   Resets most theming elements to installation default.

   This will include:
   
   GTK themes, system fonts and icons, wallpaper, geany
   themes, icon colors, Jgmenu icons and fonts, terminal 
   colors and Lightdm settings.

   [0;36m-------------------------------------------------------
   
   Press enter to reset the theme to installation default.
   
   -------------------------------------------------------[0m
      
   Or close this terminal window to quit." ;
echo ""
~/.config/lilidog-themes/default
echo ""
echo "[0;32m   -------------------------------------------------------

   All finished! If something did not change, check to
   See if the item has been removed from the system.
   
   -------------------------------------------------------[0m"
echo ""
read -n1 -p " Press any key to quit. "

     sed -i 's/^execp_icon_w =.*/execp_icon_w = 20/g' "$FILE"
     sed -i 's/^execp_icon_h =.*/execp_icon_h = 20/g' "$FILE"
     sed -i 's/^panel_size = 100% .*/panel_size = 100% 22/g' "$FILE"
        sed -i 's/^button_font = .*/button_font = Noto Sans 10/g' "$FILE"
        sed -i 's/^execp_font = .*/execp_font = Noto Sans 10/g' "$FILE"
        sed -i 's/^bat1_font = .*/bat1_font = Noto Sans 12/g' "$FILE"
        sed -i 's/^time1_font = .*/time1_font = Noto Sans 12/g' "$FILE"
        sed -i 's/^task_font = .*/task_font = Noto Sans Display 11/g' "$FILE"
        sed -i 's/^taskbar_name_font = .*/taskbar_name_font = Noto Sans 9/g' "$FILE"
     killall -SIGUSR1 tint2
}

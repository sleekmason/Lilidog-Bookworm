#!/bin/bash
# Adjust tint2 icon size
# Author - sleekmason 06/15/2023

18(){
  FILE="$HOME/.config/tint2/tint2rc"
  sed -i 's/^button_max_icon_size =.*/button_max_icon_size = 18 100/g' "$FILE"
     sed -i 's/^systray_icon_size =.*/systray_icon_size = 18 100/g' "$FILE"
     sed -i 's/^launcher_icon_size =.*/launcher_icon_size = 18 100/g' "$FILE"
     sed -i 's/^execp_icon_w =.*/execp_icon_w = 18/g' "$FILE"
     sed -i 's/^execp_icon_h =.*/execp_icon_h = 18/g' "$FILE"
     sed -i 's/^panel_size = 100% .*/panel_size = 100% 20/g' "$FILE"
        sed -i 's/^button_font = .*/button_font = Noto Sans 9/g' "$FILE"
        sed -i 's/^execp_font = .*/execp_font = Noto Sans 9/g' "$FILE"
        sed -i 's/^bat1_font = .*/bat1_font = Noto Sans 11/g' "$FILE"
        sed -i 's/^time1_font = .*/time1_font = Noto Sans 11/g' "$FILE"
        sed -i 's/^task_font = .*/task_font = Noto Sans Display 10/g' "$FILE"
        sed -i 's/^taskbar_name_font = .*/taskbar_name_font = Noto Sans 8/g' "$FILE"
     
     killall -SIGUSR1 tint2
}
20(){
  FILE="$HOME/.config/tint2/tint2rc"
     sed -i 's/^button_max_icon_size =.*/button_max_icon_size = 20 100/g' "$FILE"
     sed -i 's/^systray_icon_size =.*/systray_icon_size = 20 100/g' "$FILE"

}

export -f 18
export -f 20
export -f 22
export -f 24
export -f 26
export -f 28
export -f 30
export -f 32
export -f 34
export -f 36

yad --title "Icon Size" --escape-ok --borders=14 \
--form --geometry=240x330-550-150 --buttons-layout=edge \
--text="Default Size = 22\n" --text-align=center \
--window-icon=dialog-information \
    --form --columns=2 \
    --field=" 18":FBTN "bash -c 18 >/dev/null 2>&1 &" \
    --field=" 20":FBTN "bash -c 20 >/dev/null 2>&1 &" \
    --field=" 22":FBTN "bash -c 22 >/dev/null 2>&1 &" \
    --field=" 24":FBTN "bash -c 24 >/dev/null 2>&1 &" \
    --field=" 26":FBTN "bash -c 26 >/dev/null 2>&1 &" \
    --field=" 28":FBTN "bash -c 28 >/dev/null 2>&1 &" \
    --field=" 30":FBTN "bash -c 30 >/dev/null 2>&1 &" \
    --field=" 32":FBTN "bash -c 32 >/dev/null 2>&1 &" \
    --field=" 34":FBTN "bash -c 34 >/dev/null 2>&1 &" \
    --field=" 36":FBTN "bash -c 36 >/dev/null 2>&1 &"

#!/bin/bash

awk '/^[a-z]/ && last {print "<small>",$0,"\t",last,"</small>"} {last=""} /^#/{last=$0}' ~/.config/openbox/sxhkdrc-open |
    column -t -s $'\t' |
    rofi -dmenu -i -font Noto Sans 10 -markup-rows -l 15 -yoffset 40 \
    -window-title "sxhkd keys" -theme-str 'window {width: 500px;}' -hover-select

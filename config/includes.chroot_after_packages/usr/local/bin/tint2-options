    --field="             Autoshrink!zoom-out":FBTN "tint2-shrink" \
    --field="     Battery Options!battery":FBTN "tint2-battery-notify" \
    --field="     Theme Options!org.xfce.settings.color":FBTN "tint2-theme-options" \
    --field="         Transparency!applications-other":FBTN "tint2-transparency" \
    --field="":LBL "" \
    --field="":LBL "" \
    --field="           Settings GUI!tint2conf":FBTN "tint2conf"

O(){
     bash -c jg-icon-toggle
notify-send --urgency low 'Menu Icons Toggled Off'
}

## Export functions

export -f jg-font-size
export -f Gnome
export -f Buuf
export -f Dark
export -f Light
export -f Numix
export -f Faenza
export -f Paper
export -f Obsidian
export -f Off

yad --title "Jgmenu Icon & Font Options" --escape-ok \
    --button="Install Icons"!/usr/share/icons/gnome/22x22/categories/applications-graphics.png!:"popup -f /usr/share/lilidog/installers/icons &" \
    --button=" Font Size"!/usr/share/icons/gnome/22x22/apps/preferences-desktop-font.png!:'bash -c "jg-font-size"' \
    --button=" Exit!application-exit:0" \
    --buttons-layout=end \
    --text " Gnome and Obsidian icons are already installed. \n Press the 'Install Icons' button for more choices.\n" \
    --form --center --geometry=210x270-314-60 --borders=10 \
    --window-icon=jgmenu \
    --form --columns=3 \
    --field="     Buuf     :FBTN" 'bash -c "Buuf"' \
    --field="     Faenza     :FBTN" 'bash -c "Faenza"' \
    --field="     Gnome     :FBTN" 'bash -c "Gnome"' \
    --field="Numix:FBTN" 'bash -c "Numix"' \
    --field="Paper:FBTN" 'bash -c "Paper"' \
    --field="Papirus Dark:FBTN" 'bash -c "Dark"' \
    --field="Papirus Light:FBTN" 'bash -c "Light"' \
    --field="Obsidian:FBTN" 'bash -c "Obsidian"' \
    --field="Off:FBTN" 'bash -c "Off"'

killall -q jgmenu

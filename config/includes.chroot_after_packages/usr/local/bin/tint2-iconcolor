#!/bin/bash
# Adjust tint2 icons
# Author - sleekmason 06/14/2023
# This dialog is implemented through the tint2-position dialog

default(){
  FILE="$HOME/.config/tint2/tint2rc"
  NOTIFY="$HOME/.config/tint2/executors/notifier"
       sed -i 's/coltint2.*\//coltint2base\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2base.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#CAE0EB 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#CAE0EB 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#D1E4EB 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#CAE0EB 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#CAE0EB 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #CAE0EB 100/g' "$FILE"
     killall -SIGUSR1 tint2
}

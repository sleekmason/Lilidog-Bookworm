export -f adobe
export -f navy
export -f green
export -f teladog
export -f teladog2
export -f buuf
export -f obsidian
export -f awesome-dark
export -f awesome-light

yad --title "Icon Themes" --escape-ok --borders=14 \
--form --geometry=240x410-270-352 \
--text="Tint2 Icon Themes\n" --text-align=center --buttons-layout=edge \
--window-icon=org.xfce.settings.color \
    --form --columns=2 \
    --field=" Default":FBTN "bash -c default >/dev/null 2>&1 &" \
    --field=" Teladog":FBTN "bash -c teladog >/dev/null 2>&1 &" \
    --field=" Teladog2":FBTN "bash -c teladog2 >/dev/null 2>&1 &" \
    --field=" Buuf":FBTN "bash -c buuf >/dev/null 2>&1 &" \
    --field=" Obsidian":FBTN "bash -c obsidian >/dev/null 2>&1 &" \
    --field=" Awesome":FBTN "bash -c awesome-light >/dev/null 2>&1 &" \
    --field=" AweDark":FBTN "bash -c awesome-dark >/dev/null 2>&1 &" \
    --field=" LD Forge":FBTN "bash -c forge >/dev/null 2>&1 &" \
    --field=" LD Grey":FBTN "bash -c grey >/dev/null 2>&1 &" \
    --field=" LD White":FBTN "bash -c white >/dev/null 2>&1 &" \
    --field=" LD Creme":FBTN "bash -c creme >/dev/null 2>&1 &" \
    --field=" LD Adobe":FBTN "bash -c adobe >/dev/null 2>&1 &" \
    --field=" LD Navy":FBTN "bash -c navy >/dev/null 2>&1 &" \
    --field=" LD Green":FBTN "bash -c green >/dev/null 2>&1 &"
 

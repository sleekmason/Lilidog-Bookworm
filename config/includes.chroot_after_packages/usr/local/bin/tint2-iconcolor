#!/bin/bash
# tint2 battery color options options.
# Made be sleekmason for Lilidog 4-13-2022

FILE="$HOME/.config/tint2/tint2rc"
# NOTIFY controls the tint2 apt notifier colors, matching these selections.
NOTIFY="$HOME/.config/tint2/executors/notifier"

noti=$(yad --width 310 --borders=12 --entry --title "Tint2 Color Themes" --center --window-icon=org.xfce.settings.color \
    --image="/usr/share/icons/hicolor/24x24/apps/org.xfce.settings.color.png" \
    --button="gtk-cancel:1" --button="gtk-ok:0" \
    "Base - Default" "Light Grey" "Grey" "Dark Grey" "Adobe" "Aqua" "Blue" "Navy" "Indigo" "Violet" "Magenta" "Green" "Red" "Black" "White")

case $noti in
  Base*)
  notify-send --urgency low 'Changing Tint2 colors to Base Default' ;
       sed -i 's/coltint2.*\//coltint2base\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2base.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#CADBEB 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#CADBEB 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#CADBEB 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#CADBEB 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#CADBEB 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #CADBEB 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Light*)
  notify-send --urgency low 'Changing Tint2 colors to Light Grey' ;
       sed -i 's/coltint2.*\//coltint2lightgrey\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2lightgrey.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#C1CFDB 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#C1CFDB 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#C1CFDB 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#C1CFDB 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C1CFDB 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #C1CFDB 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Grey*)
    notify-send --urgency low 'Changing Tint2 colors to Grey' ;
       sed -i 's/coltint2.*\//coltint2grey\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2grey.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#B2BAC2 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#B2BAC2 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#B2BAC2 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#B2BAC2 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#B2BAC2 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #B2BAC2 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Dark*)
   notify-send --urgency low 'Changing Tint2 colors to Dark Grey' ;
       sed -i 's/coltint2.*\//coltint2darkgrey\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2darkgrey.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#A2AAB3 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#A2AAB3 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#A2AAB3 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#A2AAB3 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#A2AAB3 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #A2AAB3 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Adobe)
   notify-send --urgency low 'Changing Tint2 colors to Adobe' ;
       sed -i 's/coltint2.*\//coltint2adobe\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2adobe.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#C2BEB2 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#C2BEB2 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#C2BEB2 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#C2BEB2 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C2BEB2 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #C2BEB2 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Aqua*)
    notify-send --urgency low 'Changing Tint2 colors to Aqua' ;
       sed -i 's/coltint2.*\//coltint2aqua\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2aqua.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#96d2d9 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#96d2d9 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#96d2d9 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#96d2d9 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96d2d9 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #96d2d9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Blue)
    notify-send --urgency low 'Changing Tint2 colors to Blue' ;
       sed -i 's/coltint2.*\//coltint2blue\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2blue.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#96C5D9 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#96C5D9 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#96C5D9 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#96C5D9 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96C5D9 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #96C5D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Navy*)
  notify-send --urgency low 'Changing Tint2 colors to Navy' ;
       sed -i 's/coltint2.*\//coltint2navy\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2navy.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#A0BCDE 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#A0BCDE 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#A0BCDE 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#A0BCDE 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#A0BCDE 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #A0BCDE 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Indigo)
   notify-send --urgency low 'Changing Tint2 colors to Indigo' ;
       sed -i 's/coltint2.*\//coltint2indigo\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2indigo.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#A5B0E6 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#A5B0E6 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#A5B0E6 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#A5B0E6 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#A5B0E6 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #A5B0E6 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Violet)
   notify-send --urgency low 'Changing Tint2 colors to Violet' ;
       sed -i 's/coltint2.*\//coltint2violet\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2violet.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#AA96D9 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#AA96D9 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#AA96D9 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#AA96D9 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#AA96D9 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #AA96D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Magenta)
   notify-send --urgency low 'Changing Tint2 colors to Magenta' ;
       sed -i 's/coltint2.*\//coltint2magenta\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2magenta.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#D09FE6 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#D09FE6 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#D09FE6 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#D09FE6 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#D09FE6 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #D09FE6 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Green*)
  notify-send --urgency low 'Changing Tint2 colors to Green' ;
       sed -i 's/coltint2.*\//coltint2green\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2green.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#26E06A 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#26E06A 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#26E06A 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#26E06A 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#26E06A 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #26E06A 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Red)
   notify-send --urgency low 'Changing Tint2 colors to Red' ;
       sed -i 's/coltint2.*\//coltint2red\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2red.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#E6494A 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#E6494A 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#E6494A 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#E6494A 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#E6494A 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #E6494A 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Black)
   notify-send --urgency low 'Changing Tint2 colors to Black' ;
       sed -i 's/coltint2.*\//coltint2black\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2black.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#262626 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#262626 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#262626 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#262626 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#CDCDCD 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #262626 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   White)
   notify-send --urgency low 'Changing Tint2 colors to White' ;
       sed -i 's/coltint2.*\//coltint2white\//g' "$FILE"
       sed -i 's/^iconcolor=.*/iconcolor="coltint2white.png"/g' "$NOTIFY"
       sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#ffffff 100/' "$FILE"
       sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#ffffff 100/' "$FILE"
       sed -i 's/task_font_color =.*/task_font_color = \#ffffff 100/' "$FILE"
       sed -i 's/clock_font_color =.*/clock_font_color = \#ffffff 100/' "$FILE"
       sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#ffffff 100/' "$FILE"
       sed -i 's/^battery_font_color.*/battery_font_color = #ffffff 100/g' "$FILE"
     killall -SIGUSR1 tint2 ;;
        *) exit 1 ;;
    esac
